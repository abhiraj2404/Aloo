{
  "name": "aloo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "dev:api-gateway": "pnpm --filter api-gateway dev",
    "dev:storefront": "pnpm --filter storefront dev",
    "dev:dashboard": "pnpm --filter dashboard dev",
    "db:generate": "pnpm --filter @repo/database db:generate",
    "db:migrate": "pnpm --filter @repo/database db:migrate",
    "db:studio": "pnpm --filter @repo/database db:studio",
    "db:build": "pnpm --filter @repo/database build",
    "infra:up": "docker-compose -f docker/docker-compose.yml up -d",
    "infra:down": "docker-compose -f docker/docker-compose.yml down",
    "infra:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "pnpm run --recursive clean"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "turbo": "^2.7.5",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=18"
  }
}
